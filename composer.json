{
    "name": "ghostwriter/coding-standard",
    "description": "PHP Coding Standard",
    "license": "BSD-3-Clause",
    "type": "library",
    "keywords": [
        "ghostwriter",
        "coding-standard"
    ],
    "authors": [
        {
            "name": "Nathanael Esayeas",
            "email": "nathanael.esayeas@protonmail.com",
            "homepage": "https://github.com/ghostwriter",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/ghostwriter/coding-standard",
    "support": {
        "issues": "https://github.com/ghostwriter/coding-standard/issues",
        "forum": "https://github.com/ghostwriter/coding-standard/discussions",
        "source": "https://github.com/ghostwriter/coding-standard",
        "docs": "https://github.com/ghostwriter/coding-standard",
        "rss": "https://github.com/ghostwriter/coding-standard/releases.atom"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/ghostwriter"
        }
    ],
    "require": {
        "php": "*",
        "friendsofphp/php-cs-fixer": "^3.22.0",
        "phpunit/phpunit": "^10.2.6",
        "psalm/plugin-phpunit": "^0.18.4",
        "rector/rector": "^0.17.7",
        "slevomat/coding-standard": "^8.13.4",
        "squizlabs/php_codesniffer": "^3.7.2",
        "symplify/easy-coding-standard": "^11.5.0"
    },
    "bin": [
        "tools/infection",
        "tools/php-cs-fixer",
        "tools/phpbench",
        "tools/phpcbf",
        "tools/psalm"
    ],
    "config": {
        "classmap-authoritative": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "check": [
            "@p:u",
            "tools/php-cs-fixer fix --diff --using-cache=no --rules=@PER src",
            "tools/phpcbf src"
        ],
        "p:u": [
            "phive update",
            "phive purge"
        ],
        "p:i": "phive install --force-accept-unsigned -c",
        "phpunit": "true"
    }
}
