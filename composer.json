{
    "name": "ghostwriter/coding-standard",
    "description": "PHP Coding Standard",
    "license": "BSD-3-Clause",
    "type": "library",
    "keywords": [
        "ghostwriter",
        "coding-standard"
    ],
    "authors": [
        {
            "name": "Nathanael Esayeas",
            "email": "nathanael.esayeas@protonmail.com",
            "homepage": "https://github.com/ghostwriter",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/ghostwriter/coding-standard",
    "support": {
        "issues": "https://github.com/ghostwriter/coding-standard/issues",
        "forum": "https://github.com/ghostwriter/coding-standard/discussions",
        "source": "https://github.com/ghostwriter/coding-standard",
        "docs": "https://github.com/ghostwriter/coding-standard",
        "rss": "https://github.com/ghostwriter/coding-standard/releases.atom"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/ghostwriter"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ghostwriter/psalm-plugin": "^0.1.1",
        "rector/rector": "^0.17",
        "symplify/easy-coding-standard": "^12.0"
    },
    "bin": [
        "tools/composer-normalize",
        "tools/composer-require-checker",
        "tools/composer-unused",
        "tools/infection",
        "tools/php-cs-fixer",
        "tools/phpbench",
        "tools/phpcbf",
        "tools/phpcs",
        "tools/psalm",
        "tools/phpunit"
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "classmap-authoritative": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "check": [
            "@p:u",
            "tools/php-cs-fixer fix --diff --using-cache=no --rules=@PER src",
            "tools/phpcbf src"
        ],
        "crcc": "tools/composer-require-checker check --help",
        "infection": "tools/infection run --threads=max --min-msi=0 --min-covered-msi=0",
        "normalize": "tools/composer-normalize --no-update-lock",
        "unused": "tools/composer-unused",
        "p:i": "phive install --copy --force-accept-unsigned ",
        "p:u": [
            "phive update",
            "phive purge"
        ],
        "phpunit": "true"
    }
}
