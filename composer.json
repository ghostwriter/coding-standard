{
    "name": "ghostwriter/coding-standard",
    "description": "PHP Coding Standard",
    "license": "BSD-3-Clause",
    "type": "composer-plugin",
    "keywords": [
        "ghostwriter",
        "coding-standard",
        "dev"
    ],
    "authors": [
        {
            "name": "Nathanael Esayeas",
            "email": "nathanael.esayeas@protonmail.com",
            "homepage": "https://github.com/ghostwriter",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/ghostwriter/coding-standard",
    "support": {
        "issues": "https://github.com/ghostwriter/coding-standard/issues",
        "forum": "https://github.com/ghostwriter/coding-standard/discussions",
        "source": "https://github.com/ghostwriter/coding-standard",
        "docs": "https://github.com/ghostwriter/coding-standard",
        "rss": "https://github.com/ghostwriter/coding-standard/releases.atom",
        "security": "https://github.com/ghostwriter/coding-standard/security/advisories/new"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/ghostwriter"
        }
    ],
    "_comment": [
        "#BlackLivesMatter",
        "#FreePalestine",
        "#StandWithUkraine"
    ],
    "require": {
        "php": "^8.4",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-filter": "*",
        "ext-gd": "*",
        "ext-hash": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-phar": "*",
        "ext-readline": "*",
        "ext-session": "*",
        "ext-simplexml": "*",
        "ext-sockets": "*",
        "ext-sodium": "*",
        "ext-tokenizer": "*",
        "ext-xml": "*",
        "ext-xmlwriter": "*",
        "ext-zlib": "*",
        "composer-plugin-api": "^2.6.0",
        "composer-runtime-api": "^2.2.2",
        "composer/composer": "@stable",
        "composer/semver": "@stable",
        "infection/infection": "@stable",
        "mockery/mockery": "@stable",
        "phpunit/phpunit": "@stable",
        "symfony/var-dumper": "@stable",
        "vimeo/psalm": "@stable"
    },
    "require-dev": {
        "doctrine/inflector": "@stable",
        "ghostwriter/case-converter": "@stable",
        "ghostwriter/container": "@stable",
        "ghostwriter/filesystem": "@stable",
        "ghostwriter/json": "@stable",
        "ghostwriter/shell": "@stable"
    },
    "conflict": {
        "pestphp/pest": "*",
        "phpunit/phpunit": "<12.0"
    },
    "autoload": {
        "psr-4": {
            "Ghostwriter\\CodingStandard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/"
        },
        "files": [
            "bootstrap.php"
        ],
        "exclude-from-classmap": [
            "tests/fixture/"
        ]
    },
    "bin": [
        "tools/phive",
        "tools/phpactor"
    ],
    "config": {
        "allow-plugins": {
            "ghostwriter/coding-standard": true,
            "infection/extension-installer": true
        },
        "bump-after-update": false,
        "classmap-authoritative": false,
        "discard-changes": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.4.999"
        },
        "preferred-install": "dist",
        "prepend-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true,
        "use-parent-dir": false
    },
    "extra": {
        "class": "Ghostwriter\\CodingStandard\\Plugin\\ComposerPlugin",
        "ghostwriter": {
            "conflict": {
                "enabled": true,
                "vendors": [
                    "250",
                    "acmephp",
                    "asm89",
                    "async",
                    "bilge",
                    "binarykitten",
                    "codelegance",
                    "connectors",
                    "doctrine",
                    "ezsystems",
                    "growthbook",
                    "jdorn",
                    "joomla",
                    "jwage",
                    "kazist",
                    "khanamiryan",
                    "larastan",
                    "nunomaduro",
                    "object-calisthenics",
                    "ocramius",
                    "pegasus",
                    "pestphp",
                    "phptal",
                    "phptype",
                    "pimcore",
                    "provider",
                    "roave",
                    "scriptfusion",
                    "silverstripe",
                    "socialiteproviders",
                    "spatie",
                    "tga",
                    "topthink",
                    "yiisoft",
                    "yuan1994",
                    "zendframework",
                    "zetacomponents",
                    "zf-commons"
                ]
            }
        },
        "plugin-modifies-downloads": false,
        "plugin-modifies-install-path": false,
        "plugin-optional": false
    },
    "scripts": {
        "bin_infection": "tools/infection",
        "bin_phive": "tools/phive",
        "check": [
            "@bin_phive update --force-accept-unsigned",
            "@bin_phive purge"
        ],
        "infection": "@bin_infection run --threads=max --min-msi=0 --min-covered-msi=0",
        "phive:install": "@bin_phive install --copy --force-accept-unsigned "
    }
}
