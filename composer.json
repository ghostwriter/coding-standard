{
    "name": "ghostwriter/coding-standard",
    "description": "PHP Coding Standard",
    "license": "BSD-3-Clause",
    "type": "composer-plugin",
    "keywords": [
        "ghostwriter",
        "coding-standard",
        "dev"
    ],
    "authors": [
        {
            "name": "Nathanael Esayeas",
            "email": "nathanael.esayeas@protonmail.com",
            "homepage": "https://github.com/ghostwriter",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/ghostwriter/coding-standard",
    "support": {
        "issues": "https://github.com/ghostwriter/coding-standard/issues",
        "forum": "https://github.com/ghostwriter/coding-standard/discussions",
        "source": "https://github.com/ghostwriter/coding-standard",
        "docs": "https://github.com/ghostwriter/coding-standard",
        "rss": "https://github.com/ghostwriter/coding-standard/releases.atom"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/ghostwriter"
        }
    ],
    "require": {
        "php": "^8.2",
        "composer-plugin-api": "^2.6.0",
        "composer-runtime-api": "^2.2.2",
        "composer/composer": "^2.7.4",
        "mockery/mockery": "^1.6.11",
        "phpunit/phpunit": "^10.5.20 || ^11.1.3"
    },
    "autoload": {
        "psr-4": {
            "Ghostwriter\\CodingStandard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "bin": [
        "tools/ghostwriter-composer",
        "tools/ghostwriter-composer-normalize",
        "tools/ghostwriter-composer-require-checker",
        "tools/ghostwriter-composer-unused",
        "tools/ghostwriter-infection",
        "tools/ghostwriter-phive",
        "tools/ghostwriter-phpbench",
        "tools/ghostwriter-phpcbf",
        "tools/ghostwriter-phpcs",
        "tools/ghostwriter-phpunit",
        "tools/ghostwriter-psalm"
    ],
    "config": {
        "allow-plugins": {
            "ghostwriter/coding-standard": true
        },
        "classmap-authoritative": false,
        "discard-changes": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "prepend-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true,
        "use-parent-dir": false
    },
    "extra": {
        "class": "Ghostwriter\\CodingStandard\\Plugin\\ComposerPlugin",
        "plugin-modifies-downloads": false,
        "plugin-modifies-install-path": false,
        "plugin-optional": false
    },
    "scripts": {
        "check": [
            "@phive:update"
        ],
        "crcc": "tools/ghostwriter-composer-require-checker check --help",
        "infection": "tools/ghostwriter-infection run --threads=max --min-msi=0 --min-covered-msi=0",
        "normalize": "tools/ghostwriter-composer-normalize --no-update-lock",
        "phive": "tools/ghostwriter-phive",
        "phive:install": "@phive install --copy --force-accept-unsigned ",
        "phive:update": [
            "@phive update --force-accept-unsigned",
            "@phive purge"
        ],
        "phpunit": "tools/ghostwriter-phpunit",
        "unused": "tools/ghostwriter-composer-unused"
    }
}
